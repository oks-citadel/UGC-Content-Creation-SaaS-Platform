{
  "name": "@nexus/database",
  "version": "1.0.0",
  "description": "NEXUS Platform - Database schemas, migrations, and seeds",
  "private": true,
  "scripts": {
    "db:generate": "prisma generate --schema=./postgres/schema.prisma",
    "db:migrate": "prisma migrate dev --schema=./postgres/schema.prisma",
    "db:migrate:deploy": "prisma migrate deploy --schema=./postgres/schema.prisma",
    "db:migrate:reset": "prisma migrate reset --schema=./postgres/schema.prisma",
    "db:seed": "ts-node --compiler-options {\\\"module\\\":\\\"CommonJS\\\"} postgres/seeds/index.ts",
    "db:seed:plans": "ts-node --compiler-options {\\\"module\\\":\\\"CommonJS\\\"} postgres/seeds/plans.ts",
    "db:seed:admin": "ts-node --compiler-options {\\\"module\\\":\\\"CommonJS\\\"} postgres/seeds/admin.ts",
    "db:studio": "prisma studio --schema=./postgres/schema.prisma",
    "db:format": "prisma format --schema=./postgres/schema.prisma",
    "db:validate": "prisma validate --schema=./postgres/schema.prisma",
    "db:push": "prisma db push --schema=./postgres/schema.prisma",
    "db:pull": "prisma db pull --schema=./postgres/schema.prisma",
    "mongodb:indexes": "node mongodb/create-indexes.js",
    "redis:start": "redis-server redis/redis.conf",
    "redis:cli": "redis-cli",
    "redis:monitor": "redis-cli MONITOR",
    "redis:flush": "redis-cli FLUSHALL",
    "backup:postgres": "node scripts/backup-postgres.js",
    "backup:mongodb": "node scripts/backup-mongodb.js",
    "backup:all": "npm run backup:postgres && npm run backup:mongodb",
    "restore:postgres": "node scripts/restore-postgres.js",
    "restore:mongodb": "node scripts/restore-mongodb.js",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint . --ext .ts,.js",
    "type-check": "tsc --noEmit"
  },
  "prisma": {
    "schema": "postgres/schema.prisma",
    "seed": "ts-node --compiler-options {\\\"module\\\":\\\"CommonJS\\\"} postgres/seeds/index.ts"
  },
  "dependencies": {
    "@prisma/client": "^5.7.1",
    "bcryptjs": "^2.4.3",
    "ioredis": "^5.3.2",
    "mongoose": "^8.0.3"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/node": "^20.10.6",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "prisma": "^5.7.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}
