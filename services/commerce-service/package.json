    "compression": "^1.7.4",
    "morgan": "^1.10.0",
    "winston": "^3.11.0",
    "joi": "^17.11.0",
    "axios": "^1.6.2",
    "shopify-api-node": "^3.12.5",
    "@woocommerce/woocommerce-rest-api": "^1.0.1",
    "bull": "^4.12.0",
    "ioredis": "^5.3.2",
