# Server Configuration
NODE_ENV=development
PORT=3006
SERVICE_NAME=commerce-service

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/nexus_commerce?schema=public

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# RabbitMQ
RABBITMQ_URL=amqp://guest:guest@localhost:5672
RABBITMQ_EXCHANGE=nexus_events
RABBITMQ_QUEUE=commerce_queue

# Shopify Integration
SHOPIFY_API_KEY=your_shopify_api_key
SHOPIFY_API_SECRET=your_shopify_api_secret
SHOPIFY_API_VERSION=2024-01

# WooCommerce Integration
WOOCOMMERCE_URL=https://your-store.com
WOOCOMMERCE_CONSUMER_KEY=ck_your_consumer_key
WOOCOMMERCE_CONSUMER_SECRET=cs_your_consumer_secret

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES_IN=24h

# CORS
CORS_ORIGIN=http://localhost:3000,http://localhost:3001

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=./logs

# AI Service (for auto-detection)
AI_SERVICE_URL=http://localhost:3002
AI_SERVICE_API_KEY=your_ai_service_key

# Content Service
CONTENT_SERVICE_URL=http://localhost:3003

# Analytics Service
ANALYTICS_SERVICE_URL=http://localhost:3004

# Attribution Configuration
ATTRIBUTION_WINDOW_DAYS=30
DEFAULT_ATTRIBUTION_MODEL=last_touch

# Checkout Configuration
CHECKOUT_SESSION_TIMEOUT_MINUTES=30
ORDER_FULFILLMENT_WEBHOOK=https://your-domain.com/webhooks/fulfillment

# Feature Flags
ENABLE_AUTO_PRODUCT_DETECTION=true
ENABLE_REAL_TIME_ATTRIBUTION=true
ENABLE_MULTI_CURRENCY=false
