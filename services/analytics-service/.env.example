NODE_ENV=development
PORT=3007
SERVICE_NAME=analytics-service

# Database
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/nexus_analytics?schema=public"

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# RabbitMQ
RABBITMQ_URL=amqp://guest:guest@localhost:5672

# Services
CONTENT_SERVICE_URL=http://localhost:3001
CAMPAIGN_SERVICE_URL=http://localhost:3002
CREATOR_SERVICE_URL=http://localhost:3003
COMMERCE_SERVICE_URL=http://localhost:3006

# WebSocket
WS_PORT=3017

# Report Storage
REPORT_STORAGE_PATH=/tmp/nexus-reports
S3_BUCKET=nexus-reports
S3_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# Email (for report delivery)
SMTP_HOST=smtp.mailtrap.io
SMTP_PORT=2525
SMTP_USER=
SMTP_PASS=
FROM_EMAIL=reports@nexusplatform.io

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-this

# Anomaly Detection
ANOMALY_DETECTION_ENABLED=true
ANOMALY_THRESHOLD_STDDEV=2.5
FATIGUE_CHECK_ENABLED=true

# Report Generation
MAX_REPORT_SIZE_MB=50
REPORT_RETENTION_DAYS=90

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
