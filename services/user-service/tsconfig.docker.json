{
  "extends": "../../tsconfig.docker.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": false,
    "declarationMap": false,
    "noEmit": false,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "strict": false
