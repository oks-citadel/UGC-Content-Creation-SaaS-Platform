# Server Configuration
NODE_ENV=development
PORT=3006
SERVICE_NAME=marketplace-service

# Database
DATABASE_URL=postgresql://postgres:password@localhost:5432/nexus_marketplace?schema=public

# Redis
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRY=24h

# Stripe
STRIPE_SECRET_KEY=sk_test_...
STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...
STRIPE_CONNECT_CLIENT_ID=ca_...

# Paystack (African markets)
PAYSTACK_SECRET_KEY=sk_test_...
PAYSTACK_PUBLIC_KEY=pk_test_...

# Flutterwave (African markets)
FLUTTERWAVE_SECRET_KEY=FLWSECK_TEST-...
FLUTTERWAVE_PUBLIC_KEY=FLWPUBK_TEST-...
FLUTTERWAVE_ENCRYPTION_KEY=FLWSECK_TEST...

# DocuSign
DOCUSIGN_INTEGRATION_KEY=your-integration-key
DOCUSIGN_USER_ID=your-user-id
DOCUSIGN_ACCOUNT_ID=your-account-id
DOCUSIGN_PRIVATE_KEY_PATH=./keys/docusign-private.key
DOCUSIGN_OAUTH_BASE_PATH=https://account-d.docusign.com
DOCUSIGN_API_BASE_PATH=https://demo.docusign.net/restapi

# Currency & Localization
DEFAULT_CURRENCY=USD
SUPPORTED_CURRENCIES=USD,EUR,GBP,NGN,KES,GHS,ZAR

# Payment Processing
MIN_PAYOUT_AMOUNT=50
PAYOUT_PROCESSING_FEE_PERCENT=2.5
PAYOUT_PROCESSING_FEE_FIXED=0.30

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Monitoring
SENTRY_DSN=
PROMETHEUS_ENABLED=true

# External Services
CAMPAIGN_SERVICE_URL=http://localhost:3003
CREATOR_SERVICE_URL=http://localhost:3004
NOTIFICATION_SERVICE_URL=http://localhost:3008

# AI Matching (for opportunity matching)
OPENAI_API_KEY=sk-...
AI_MATCHING_ENABLED=true

# File Storage
S3_BUCKET=nexus-marketplace-contracts
S3_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# Contract Templates
CONTRACT_TEMPLATE_BUCKET=nexus-contract-templates
DEFAULT_CONTRACT_TEMPLATE_ID=default-ugc-contract-v1
