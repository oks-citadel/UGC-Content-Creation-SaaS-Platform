# Customer Agent Service Configuration

# Service Settings
SERVICE_NAME=customer-agent
VERSION=1.0.0
DEBUG=false

# LLM Provider Configuration
# Options: openai, anthropic
LLM_PROVIDER=openai

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4-turbo-preview

# Anthropic Configuration (alternative)
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-3-sonnet-20240229

# LLM Settings
MAX_TOKENS=1024
TEMPERATURE=0.7

# Redis Configuration
REDIS_URL=redis://localhost:6379
CACHE_TTL=3600
CONVERSATION_TTL=86400

# Vector Database Configuration
# Options: faiss, pinecone, qdrant
VECTOR_DB_TYPE=faiss

# Pinecone Configuration (if using pinecone)
PINECONE_API_KEY=your_pinecone_key_here
PINECONE_ENVIRONMENT=us-west1-gcp

# Qdrant Configuration (if using qdrant)
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=your_qdrant_key_here

# Embedding Configuration
EMBEDDING_MODEL=text-embedding-3-small
EMBEDDING_DIMENSION=1536

# Sentiment Analysis Settings
SENTIMENT_THRESHOLD_NEGATIVE=-0.5
SENTIMENT_THRESHOLD_ESCALATION=-0.7

# Escalation Settings
MAX_CONVERSATION_TURNS_BEFORE_ESCALATION=10

# Notification Service
NOTIFICATION_SERVICE_URL=http://localhost:3006
