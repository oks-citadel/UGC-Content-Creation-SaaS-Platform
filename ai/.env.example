# Common Configuration
DEBUG=false
SERVICE_NAME=nexus-ai-service
VERSION=1.0.0

# Redis Configuration
REDIS_URL=redis://localhost:6379
CACHE_TTL=3600

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Replicate Configuration (for video generation)
REPLICATE_API_TOKEN=your_replicate_token_here

# ElevenLabs Configuration (optional, for advanced TTS)
ELEVENLABS_API_KEY=your_elevenlabs_key_here

# AWS Configuration (for S3 storage)
S3_BUCKET=your_s3_bucket_name
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key

# Vector Database Configuration (for recommendation engine)
VECTOR_DB_TYPE=faiss  # Options: faiss, pinecone, qdrant
PINECONE_API_KEY=your_pinecone_key
PINECONE_ENVIRONMENT=us-west1-gcp
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=your_qdrant_key

# Model Configuration
CLIP_MODEL_NAME=openai/clip-vit-base-patch32
EMBEDDING_MODEL=all-MiniLM-L6-v2

# Video Generator Settings
DEFAULT_RESOLUTION=1080x1920
DEFAULT_FPS=30
MAX_VIDEO_DURATION=180
TEMP_DIR=/tmp/video-generator

# Performance Predictor Settings
HIGH_ENGAGEMENT_THRESHOLD=0.7
VIRAL_POTENTIAL_THRESHOLD=0.8
MIN_CONFIDENCE_SCORE=0.6

# Recommendation Engine Settings
MIN_SIMILARITY_SCORE=0.6
MAX_RECOMMENDATIONS=20
DIVERSITY_FACTOR=0.3

# Moderation Engine Settings
BRAND_SAFETY_THRESHOLD=0.7
COMPLIANCE_THRESHOLD=0.8
COMPETITOR_DETECTION_ENABLED=true
