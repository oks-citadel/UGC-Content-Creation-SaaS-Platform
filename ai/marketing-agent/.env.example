# ===========================================
# AI Marketing Agent Configuration
# ===========================================

# Service Settings
SERVICE_NAME=marketing-agent
VERSION=1.0.0
DEBUG=false

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_TEMPERATURE=0.7
OPENAI_MAX_TOKENS=4096

# Redis Configuration (for caching)
REDIS_URL=redis://localhost:6379
CACHE_TTL=3600

# Campaign Generation Settings
MAX_CAMPAIGN_VARIATIONS=5
DEFAULT_CAMPAIGN_DURATION_DAYS=30

# Copy Generation Settings
MAX_COPY_VARIATIONS=10
MAX_HEADLINE_LENGTH=100
MAX_CTA_LENGTH=50

# Hashtag Generation Settings
MAX_HASHTAGS_PER_PLATFORM=30
MIN_HASHTAG_RELEVANCE_SCORE=0.6

# Competitor Analysis Settings
MAX_COMPETITORS_TO_ANALYZE=10
CONTENT_SAMPLE_SIZE=50

# Trend Analysis Settings
TREND_LOOKBACK_DAYS=7
MIN_TREND_SCORE=0.5

# A/B Testing Settings
MIN_AB_TEST_VARIATIONS=2
MAX_AB_TEST_VARIATIONS=5
AB_TEST_CONFIDENCE_LEVEL=0.95

# Audience Segmentation Settings
MAX_AUDIENCE_SEGMENTS=10
MIN_SEGMENT_SIZE_PERCENTAGE=5.0

# Brand Voice Settings
BRAND_VOICE_CONSISTENCY_THRESHOLD=0.8
