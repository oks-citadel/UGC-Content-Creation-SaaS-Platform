# =============================================================================
# NEXUS Platform - DEVELOPMENT Environment Configuration
# =============================================================================
# Copy this file to .env.local for local development
# This configuration uses local services (Docker) and mock integrations
# =============================================================================

# -----------------------------------------------------------------------------
# APPLICATION SETTINGS
# -----------------------------------------------------------------------------
NODE_ENV=development
APP_NAME=nexus-platform-dev
APP_URL=http://localhost:3000
APP_VERSION=1.0.0-dev

# -----------------------------------------------------------------------------
# AZURE CONFIGURATION (Optional for Development)
# -----------------------------------------------------------------------------
# Leave empty to use local MinIO storage instead
AZURE_SUBSCRIPTION_ID=
AZURE_TENANT_ID=
AZURE_CLIENT_ID=
AZURE_CLIENT_SECRET=
AZURE_RESOURCE_GROUP=rg-nexus-dev

# Azure AD B2C - Not needed for local development (use NextAuth)
AZURE_AD_B2C_TENANT_NAME=
AZURE_AD_B2C_CLIENT_ID=
AZURE_AD_B2C_CLIENT_SECRET=
AZURE_AD_B2C_PRIMARY_USER_FLOW=

# -----------------------------------------------------------------------------
# DATABASE CONFIGURATION (Local Docker)
# -----------------------------------------------------------------------------
# PostgreSQL - Local Docker container
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/nexus_dev
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# MongoDB - Local Docker container
MONGODB_URI=mongodb://localhost:27017/nexus_dev

# Redis - Local Docker container
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# -----------------------------------------------------------------------------
# AUTHENTICATION
# -----------------------------------------------------------------------------
NEXTAUTH_URL=http://localhost:3000
# Generate a new secret for each developer: openssl rand -base64 32
NEXTAUTH_SECRET=development-secret-replace-with-random-value

# OAuth Providers - Optional for development
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# -----------------------------------------------------------------------------
# SOCIAL MEDIA APIS (Optional - Use mock mode)
# -----------------------------------------------------------------------------
# Set MOCK_EXTERNAL_APIS=true to skip these
TIKTOK_CLIENT_KEY=
TIKTOK_CLIENT_SECRET=
META_APP_ID=
META_APP_SECRET=
YOUTUBE_API_KEY=
YOUTUBE_CLIENT_ID=
YOUTUBE_CLIENT_SECRET=

# -----------------------------------------------------------------------------
# STORAGE (Local MinIO)
# -----------------------------------------------------------------------------
# MinIO mimics Azure Blob Storage for local development
STORAGE_ENDPOINT=http://localhost:9000
STORAGE_PUBLIC_URL=http://localhost:9000
STORAGE_ACCESS_KEY=minioadmin
STORAGE_SECRET_KEY=minioadmin
STORAGE_BUCKET_UPLOADS=uploads
STORAGE_BUCKET_MEDIA=media
STORAGE_BUCKET_VIDEOS=videos

# Azure Storage - Leave empty to use MinIO
AZURE_STORAGE_ACCOUNT_NAME=
AZURE_STORAGE_ACCOUNT_KEY=
AZURE_STORAGE_CONNECTION_STRING=
AZURE_STORAGE_CONTAINER_UPLOADS=uploads
AZURE_STORAGE_CONTAINER_MEDIA=media

# -----------------------------------------------------------------------------
# AI SERVICES (Optional for Development)
# -----------------------------------------------------------------------------
# Azure OpenAI - Optional, uses mock if empty
AZURE_OPENAI_ENDPOINT=
AZURE_OPENAI_API_KEY=
AZURE_OPENAI_DEPLOYMENT_GPT4=gpt-4
AZURE_OPENAI_DEPLOYMENT_GPT4O=gpt-4o
AZURE_OPENAI_API_VERSION=2024-02-15-preview

# OpenAI Direct - Optional fallback
OPENAI_API_KEY=

# Other AI Services - Optional
REPLICATE_API_TOKEN=
ELEVENLABS_API_KEY=

# Azure Cognitive Services - Optional
AZURE_COGNITIVE_SERVICES_ENDPOINT=
AZURE_COGNITIVE_SERVICES_KEY=

# -----------------------------------------------------------------------------
# MESSAGE QUEUE (Local Docker)
# -----------------------------------------------------------------------------
# Using local RabbitMQ instead of Azure Service Bus
RABBITMQ_URL=amqp://guest:guest@localhost:5672

# Azure Service Bus - Not used in development
AZURE_SERVICE_BUS_CONNECTION_STRING=
AZURE_SERVICE_BUS_QUEUE_VIDEOS=video-processing
AZURE_SERVICE_BUS_QUEUE_NOTIFICATIONS=notifications

# -----------------------------------------------------------------------------
# COMMUNICATION (Local MailHog)
# -----------------------------------------------------------------------------
# MailHog captures all emails locally at http://localhost:8025
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_SECURE=false
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@nexus.local

# SendGrid - Not used in development (use MailHog)
SENDGRID_API_KEY=
SENDGRID_FROM_EMAIL=noreply@nexusugc.com

# Twilio - Not used in development
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# -----------------------------------------------------------------------------
# PAYMENT SERVICES (Stripe Test Mode)
# -----------------------------------------------------------------------------
# Use Stripe test keys for development
# Get test keys at: https://dashboard.stripe.com/test/apikeys
STRIPE_SECRET_KEY=YOUR_STRIPE_TEST_SECRET_KEY
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_test_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Paystack - Optional
PAYSTACK_SECRET_KEY=
PAYSTACK_PUBLIC_KEY=

# -----------------------------------------------------------------------------
# ANALYTICS (Optional for Development)
# -----------------------------------------------------------------------------
MIXPANEL_TOKEN=
AMPLITUDE_API_KEY=

# -----------------------------------------------------------------------------
# FEATURE FLAGS
# -----------------------------------------------------------------------------
FEATURE_AI_VIDEO_GENERATOR=true
FEATURE_SHOPPABLE_COMMERCE=true
FEATURE_CREATOR_MARKETPLACE=true
FEATURE_ADVANCED_ANALYTICS=true

# -----------------------------------------------------------------------------
# RATE LIMITING (Relaxed for Development)
# -----------------------------------------------------------------------------
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=1000

# -----------------------------------------------------------------------------
# LOGGING (Verbose for Development)
# -----------------------------------------------------------------------------
LOG_LEVEL=debug
LOG_FORMAT=pretty

# -----------------------------------------------------------------------------
# DEVELOPMENT SETTINGS
# -----------------------------------------------------------------------------
HOT_RELOAD=true
SKIP_EMAIL_VERIFICATION=true
MOCK_EXTERNAL_APIS=false

# -----------------------------------------------------------------------------
# LOCAL DOCKER SERVICES
# -----------------------------------------------------------------------------
# Elasticsearch - Local search
ELASTICSEARCH_URL=http://localhost:9200

# n8n Workflow Automation
N8N_BASIC_AUTH_ACTIVE=true
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=admin
N8N_HOST=localhost
N8N_PORT=5678
N8N_PROTOCOL=http
