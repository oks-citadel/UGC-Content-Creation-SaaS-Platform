{
  "name": "nexus-platform",
  "version": "1.0.0",
  "private": true,
  "description": "NEXUS - World-Class UGC & Marketing SaaS Platform",
  "author": "NEXUS Team",
  "license": "PROPRIETARY",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0",
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "type-check": "turbo run type-check",
    "test": "turbo run test",
    "test:coverage": "turbo run test:coverage",
    "test:integration": "turbo run test:integration",
    "test:e2e": "turbo run test:e2e",
    "test:security": "vitest run tests/security --reporter=verbose",
    "clean": "turbo run clean && rm -rf node_modules",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "env:validate": "node scripts/validate-env.js",
    "env:validate:staging": "node scripts/validate-env.js --env=staging",
    "env:validate:production": "node scripts/validate-env.js --env=production",
    "env:summary": "node scripts/validate-env.js --summary",
    "env:required": "node scripts/validate-env.js --required",
    "predev": "node scripts/validate-env.js",
    "prebuild": "node scripts/validate-env.js",
    "db:migrate": "turbo run db:migrate",
    "db:seed": "turbo run db:seed",
    "db:reset": "turbo run db:reset",
    "docker:up": "docker-compose -f infrastructure/docker/docker-compose.yml up -d",
    "docker:down": "docker-compose -f infrastructure/docker/docker-compose.yml down",
    "docker:logs": "docker-compose -f infrastructure/docker/docker-compose.yml logs -f",
    "deploy:dev": "turbo run deploy --filter=!@nexus/mobile-* -- --env=dev",
    "deploy:staging": "pnpm env:validate:staging && turbo run deploy --filter=!@nexus/mobile-* -- --env=staging",
    "deploy:prod": "pnpm env:validate:production && turbo run deploy --filter=!@nexus/mobile-* -- --env=prod",
    "pre-pr": "pnpm lint && pnpm type-check && pnpm build",
    "prepare": "husky install",
    "postinstall": "turbo run build --filter=@nexus/types --filter=@nexus/utils --filter=@nexus/config"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.0",
    "@commitlint/config-conventional": "^18.4.0",
    "@playwright/test": "^1.57.0",
    "@types/node": "^25.0.10",
    "@vitest/coverage-v8": "^4.0.16",
    "@vitest/ui": "^4.0.16",
    "dotenv": "^17.2.3",
    "eslint": "^8.55.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.0",
    "turbo": "^1.11.0",
    "typescript": "^5.3.0",
    "vitest": "^4.0.16"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
