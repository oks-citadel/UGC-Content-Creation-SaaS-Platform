# =============================================================================
# NEXUS Platform - B2C Identity Configuration
# Copy this file to .env.b2c and fill in your values
# =============================================================================

# =============================================================================
# Azure AD B2C Tenant
# =============================================================================

# B2C tenant name (without .onmicrosoft.com)
B2C_TENANT_NAME=your-tenant-name

# B2C policy name (user flow)
B2C_POLICY_NAME=B2C_1_SignUpSignIn

# =============================================================================
# App Registrations
# =============================================================================

# Web/SPA Application Client ID
B2C_WEB_CLIENT_ID=00000000-0000-0000-0000-000000000000

# Backend API Application Client ID
B2C_API_CLIENT_ID=00000000-0000-0000-0000-000000000000

# API Identifier URI
B2C_API_IDENTIFIER_URI=api://nexus-api-staging

# Automation Application (for Graph API access)
B2C_AUTOMATION_CLIENT_ID=00000000-0000-0000-0000-000000000000
B2C_AUTOMATION_CLIENT_SECRET=your-client-secret

# =============================================================================
# Security Group IDs
# These are populated by Terraform output
# =============================================================================

# Subscription Tier Groups
GROUP_ID_FREE=00000000-0000-0000-0000-000000000000
GROUP_ID_STARTER=00000000-0000-0000-0000-000000000000
GROUP_ID_GROWTH=00000000-0000-0000-0000-000000000000
GROUP_ID_PRO=00000000-0000-0000-0000-000000000000
GROUP_ID_BUSINESS=00000000-0000-0000-0000-000000000000
GROUP_ID_ENTERPRISE=00000000-0000-0000-0000-000000000000

# Special Groups
GROUP_ID_VERIFIED=00000000-0000-0000-0000-000000000000
GROUP_ID_SUPPORT=00000000-0000-0000-0000-000000000000
GROUP_ID_ADMIN=00000000-0000-0000-0000-000000000000
GROUP_ID_SUSPENDED=00000000-0000-0000-0000-000000000000

# =============================================================================
# Front Door Origin Protection
# =============================================================================

# Front Door Resource GUID (from Azure Portal or Terraform output)
FRONTDOOR_ID=

# =============================================================================
# Redirect URIs (for local development)
# =============================================================================

# Web Application
WEB_REDIRECT_URI=http://localhost:3000/auth/callback
WEB_LOGOUT_URI=http://localhost:3000

# SPA
SPA_REDIRECT_URI=http://localhost:3000/auth/callback

# =============================================================================
# Microsoft Graph API
# =============================================================================

# Azure AD Tenant ID (for Graph API)
AZURE_TENANT_ID=

# Graph API Base URL
GRAPH_API_URL=https://graph.microsoft.com/v1.0
